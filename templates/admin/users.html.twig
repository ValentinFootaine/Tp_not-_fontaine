{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<h1>Manage Users</h1>
<a href="{{ path('admin_user_new') }}">Create New User</a>
<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {id: user.id}) }}">Edit</a>
                    <a href="{{ path('admin_user_delete', {id: user.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}