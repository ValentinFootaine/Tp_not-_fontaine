{% extends 'base.html.twig' %}

{% block title %}User Reservations{% endblock %}

{% block body %}
<h1>User Reservations</h1>
<a href="{{ path('user_reservation_new') }}">Create New Reservation</a>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Time Slot</th>
            <th>Event Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.date|date('Y-m-d H:i') }}</td>
                <td>{{ reservation.timeSlot }}</td>
                <td>{{ reservation.eventName }}</td>
                <td>
                    <a href="{{ path('user_reservation_edit', {id: reservation.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}